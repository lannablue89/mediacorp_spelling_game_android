<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/purple_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvSchool"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etSchoolName"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Enter The Name of Your School" />

    <EditText
        android:id="@+id/etSchoolName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/medium_margin"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:maxLines="1"
        android:inputType="textCapWords"
        android:hint="School Name"
        android:minWidth="200dp" />

    <Button
        android:id="@+id/btnNext"
        style="@style/NextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/etSchoolName"
        android:layout_below="@id/etSchoolName"
        android:text="@string/abc_next" />

</RelativeLayout>